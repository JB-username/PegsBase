@model PegsBase.Models.AppSettings;
@{
    ViewBag.Title = "App Settings";
}
<h2>App Settings</h2>

<form asp-action="Settings" method="post">
    <div>
        <label>
            <input type="checkbox" asp-for="SwapXY" />
            Swap X and Y Coordinates
        </label>
    </div>
    <div>
        <label>
            <input type="checkbox" asp-for="InvertX" />
            Invert X Sign (+/-)
        </label>
    </div>
    <div>
        <label>
            <input type="checkbox" asp-for="InvertY" />
            Invert Y Sign (+/-)
        </label>
    </div>
    <button type="submit">Save Settings</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

