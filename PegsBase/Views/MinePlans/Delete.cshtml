@model PegsBase.Models.MinePlans.MinePlanDeleteViewModel

@{
    ViewData["Title"] = "Delete Mine Plan";
}

<h2>Delete Mine Plan</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this mine plan?</p>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.PlanName</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.PlanTypeName</dd>

        <dt class="col-sm-3">Level</dt>
        <dd class="col-sm-9">@Model.LevelName</dd>

        <dt class="col-sm-3">Locality</dt>
        <dd class="col-sm-9">@Model.LocalityName</dd>

        <dt class="col-sm-3">Scale</dt>
        <dd class="col-sm-9">@Model.Scale</dd>

        <dt class="col-sm-3">Uploaded</dt>
        <dd class="col-sm-9">@Model.UploadedAt</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Yes, delete it</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
