@model MinePlanUploadViewModel
@using PegsBase.Models.Enums

@{
    ViewData["Title"] = "Upload Mine Plan";
}

<h2>Upload Mine Plan</h2>

<form asp-action="Upload" asp-controller="MinePlans" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="PlanName"></label>
        <input asp-for="PlanName" class="form-control" />
        <span asp-validation-for="PlanName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LevelId">Level</label>
        <select asp-for="LevelId" asp-items="Model.LevelOptions" class="form-control">
            <option value="">-- select level --</option>
        </select>
        <span asp-validation-for="LevelId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LocalityId">Locality</label>
        <select asp-for="LocalityId" asp-items="Model.LocalityOptions" class="form-control">
            <option value="">-- select locality --</option>
        </select>
        <span asp-validation-for="LocalityId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Scale"></label>
        <input asp-for="Scale" type="number" class="form-control" />
        <span asp-validation-for="Scale" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PlanTypeId">Plan Type</label>
        <select asp-for="PlanTypeId"
                asp-items="Model.PlanTypeOptions"
                class="form-control">
            <option value="">-- select plan type --</option>
        </select>
        <span asp-validation-for="PlanTypeId" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input asp-for="IsSigned" class="form-check-input" />
        <label asp-for="IsSigned" class="form-check-label">Mark as signed</label>
    </div>

    <div class="form-group mb-3">
        <label asp-for="File"></label>
        <input asp-for="File" type="file" accept="application/pdf" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload Plan</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
