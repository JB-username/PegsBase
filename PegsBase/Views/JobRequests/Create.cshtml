@model PegsBase.Models.JobRequests.CreateJobRequestViewModel
@using PegsBase.Models.Identity

@{
    ViewData["Title"] = "Create Job Request";
}

<h2>Create Job Request</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Subject" class="form-label"></label>
        <input asp-for="Subject" class="form-control" placeholder="Enter subject..." />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter job description..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="AssignedToUserId" class="form-label">Assign to Specific User</label>
        <select asp-for="AssignedToUserId" class="form-select" asp-items="ViewBag.Users">
            <option value="">-- Select a user (optional) --</option>
        </select>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="TargetDepartment" class="form-label">Target Department</label>
            <input asp-for="TargetDepartment" class="form-control" placeholder="e.g. Survey, Engineering" />
        </div>
        <div class="col-md-6">
            <label asp-for="TargetSection" class="form-label">Target Section</label>
            <input asp-for="TargetSection" class="form-control" placeholder="e.g. Survey, Ventilation" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Send Request</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
