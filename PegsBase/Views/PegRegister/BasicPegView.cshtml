@model PegRegister

<div class="card">
    <div class="card-header bg-primary">
        <h4 class="text-light">Peg Details</h4>
    </div>
    <div class="card-body">
        <p><strong>Peg Name:</strong> @Model.PegName</p>
        <p><strong>Coordinates:</strong> (@Model.XCoord, @Model.YCoord, @Model.ZCoord)</p>
        <p><strong>Surveyor:</strong> @Model.Surveyor</p>
        <p><strong>Locality:</strong> @Model.Locality</p>
        <p><strong>Point Type:</strong> @Model.PointType</p>
        <p><strong>Survey Date:</strong> @Model.SurveyDate.ToString("yyyy/MM/dd")</p>
        @if (Model.PegFailed)
        {
            <p class="text-danger"><strong>This peg was marked as FAILED.</strong></p>
        }
    </div>
</div>

