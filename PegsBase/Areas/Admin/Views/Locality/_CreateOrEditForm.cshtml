@model PegsBase.Models.Entities.Locality

@{
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    ViewData["Title"] = actionName == "Create" ? "Add Locality" : "Edit Locality";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@actionName" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LevelId" class="form-label">Level</label>
        <select asp-for="LevelId" asp-items="ViewBag.Levels" class="form-select"></select>
        <span asp-validation-for="LevelId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-area="Admin" asp-controller="Locality" asp-action="Index" class="btn btn-secondary">Back</a>
</form>

